@model Zodo.Assets.Core.Account

@{
    ViewData["Title"] = Model.Id > 0 ? "编辑员工信息" : "创建员工信息";
}

<div class="form-box-fixed-container">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h3 class="form-box-title">@ViewData["Title"]</h3>
        <div class="form-box row">
            <input type="hidden" asp-for="Id" />
            <div class="col-6">
                <div class="label">上级部门</div>
                <div class="control">
                    <select asp-for="DeptId" asp-items="ViewBag.Parents"></select>
                </div>
            </div>
            <div class="col-6">
                <div class="label">员工名称</div>
                <div class="control">
                    <input asp-for="Name" class="form-control" />
                </div>
            </div>
            <div class="col-6">
                <div class="label">手机号码</div>
                <div class="control">
                    <input asp-for="Mobile" class="form-control" />
                </div>
            </div>
            <div class="col-6">
                <div class="label">固定电话</div>
                <div class="control">
                    <input asp-for="Phone" class="form-control" />
                </div>
            </div>
            <div class="col-12">
                <div class="label">邮箱</div>
                <div class="control">
                    <input asp-for="Email" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-box-foot content-right">
            <input type="submit" class="btn btn-green" value="提交" />
            <input type="button" id="btn-closeSelf" class="btn btn-red" value="关闭" />
        </div>
    </form>
</div>
@section scripts {
    <script src="~/lib/validator/validator.js"></script>
    <script>
            myUI.initForm();
    </script>
}
