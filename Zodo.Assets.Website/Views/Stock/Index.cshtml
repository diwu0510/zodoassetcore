@using Newtonsoft.Json;

@{
    ViewData["Title"] = "盘点管理";
}

<div class="container-fixed">
    <div id="pageTitle">
        <form id="form" onsubmit="return false" ;>
            @Html.AntiForgeryToken()
            <div class="toolbar row">
                <div class="col-8">
                    <a id="btn-create"
                       href="javascript:;"
                       data-action="/Stock/Create"
                       data-type="pop"
                       data-options='{"title": "创建盘点", "width": 720, "height": 400, "before": null}'
                       class="btn btn-green btn-customer"><i class="fa fa-plus-square"></i>添加</a>
                    <a id="btn-edit"
                       href="javascript:;"
                       data-action="/Stock/Edit"
                       data-type="pop"
                       data-grid="grid"
                       data-options='{"title": "修改盘点信息", "width": 720, "height": 400, "before": null}'
                       class="btn btn-blue btn-customer"><i class="fa fa-pencil-square"></i>修改</a>

                    <a id="btn-detail"
                       href="javascript:;"
                       data-action="/StockItem/Index"
                       data-type="tab"
                       data-grid="grid"
                       data-options='{"title": "盘点详情",  "before": null}'
                       class="btn btn-success btn-customer"><i class="fa fa-leaf"></i>盘点明细</a>

                    <a id="btn-delete"
                       href="javascript:;"
                       data-action="/Stock/Finish"
                       data-type="ajax"
                       data-grid="grid"
                       data-options='{"msg": "确认结束此盘点", "before": null}'
                       class="btn btn-orange btn-customer"><i class="fa fa-trash-o"></i>结束盘点</a>

                    <a id="btn-delete"
                       href="javascript:;"
                       data-action="/Stock/Delete"
                       data-type="ajax"
                       data-grid="grid"
                       data-options='{"msg": "确认删除盘点", "before": null}'
                       class="btn btn-red btn-customer"><i class="fa fa-trash-o"></i>删除</a>

                    <a id="btn-refresh" href="javascript:;" class="btn btn-default" onclick="window.grid.search();"><i class="fa fa-refresh"></i>刷新</a>
                </div>
                <div class="col-4 content-right">
                    <select name="isFinish">
                        <option value="">完成状态</option>
                        <option value="true">已完成</option>
                        <option value="false">未完成</option>
                    </select>
                    <input name="Key" type="search" value="" placeholder="关键字" />
                    <input type="button" class="btn btn-blue" value="搜索" onclick="window.grid.search()">
                </div>
            </div>
        </form>
    </div>
    <div id="list" class="grid-box"></div>
</div>

@section scripts
    {
    <script src="~/lib/myui/myGridNoFixed.v2.js"></script>
    <script>
        var grid = $('#list').MyGrid({
            api: '/Stock/Get',
            columns: [
                { title: '编号', type: 'indexNum', width: 40 },
                { title: '标题', field: 'title', width: 180 },
                { title: '创建日期', field: 'createAt', width: 140 },
                { title: '完成时间', field: 'finishAt', width: 120 },
                { title: '备注', field: 'remark' }
            ],
            keyColumn: 'id',
            height: function() {
                var h = $(window).height() - $('#pageTitle').height() - 40;
                return h;
            },
            pageSize: 20,
            dataConvertFn: function(source) { return source; },
            renderCompleteFn: null,
            filterFn: function() { return $('#form').serialize(); },
            ajaxErrorFn: null,
            ajaxBeforeSendFn: null,
            click: function(item) { },
            dblClick: function(item) { $('#btn-detail').trigger('click'); },
            multi: false,
            pager: true,
            auto: true
        });
    </script>
}